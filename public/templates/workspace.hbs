{{#is step 1}}
<section>
  <h3 class="tool-header">Select Loop</h3>
  <p class="tool-description">Jawfish ribbon sawtail fish peamouth northern anchovy giant gourami zebra lionfish.</p>
  <div class="slider">
    <div class="slider-handle">
      <div class="handle-point start"></div>
      <div class="handle-point end"></div>
    </div>
  </div>

  <div class="clearfix">
    <div class="loop-frame-wrapper clearfix">
      <div class="table">
        <video class="loop-frame loop-frame-start table-cell" muted loop>
          <source src="img/sample.mp4" />
        </video>
        <em class="loop-frame-time time-start table-cell">0:00</em>
      </div>
    </div>

    <div class="loop-frame-wrapper clearfix">
      <em class="loop-frame-time time-end">0:10</em>
      <video class="loop-frame loop-frame-end" muted loop>
        <source src="img/sample.mp4" />
      </video>
    </div>
  </div>

  <button class="btn btn-next">Save &amp; Next</button>
</section>
{{/is}}

{{#is step 2}}
<section class="animated slideInUp">
  <h3 class="tool-header">Add A Filter</h3>
  <p class="tool-description">Jawfish ribbon sawtail fish peamouth northern anchovy giant gourami zebra lionfish.</p>

  <div class="filter-select">
    <div class="filter-option" data-filter="none">
      <video muted loop>
        <source src="img/sample.mp4" />
      </video>
    </div>
    <div class="filter-option grayscale" data-filter="grayscale">
      <video muted loop>
        <source src="img/sample.mp4" />
      </video>
    </div>
    <div class="filter-option blur" data-filter="blur">
      <video muted loop>
        <source src="img/sample.mp4" />
      </video>
    </div>
  </div>

</section>
{{/is}}


